{
  "name": "financetracker-desktop",
  "version": "1.0.6",
  "description": "Современное десктопное приложение для управления личными финансами",
  "main": "electron/main.js",
  "homepage": "./",
  "private": true,
  "type": "module",
  "repository": {
    "type": "git",
    "url": "https://github.com/APlightman/FLYN-new.git"
  },
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "clean": "rimraf dist-electron",
    "electron-start": "electron .",
    "electron-wait": "wait-on http://localhost:5179 && npm run electron-start",
    "electron:dev": "concurrently -k \"npm:dev\" \"npm:electron-wait\"",
    "electron:pack": "npm run build && electron-builder --dir",
    "electron:dist": "npm run clean && npm run build && electron-builder",
    "electron:dist:win": "npm run clean && npm run build && electron-builder --win",
    "electron:dist:mac": "npm run clean && npm run build && electron-builder --mac",
    "electron:dist:linux": "npm run clean && npm run build && electron-builder --linux",
    "release:electron": "npm version patch && npm run electron:dist",
    "postinstall": "electron-builder install-app-deps",
    "firebase:emulators": "firebase emulators:start",
    "firebase:deploy": "npm run build && firebase deploy",
    "firebase:init": "firebase init"
  },
  "build": {
    "appId": "com.financetracker.desktop",
    "productName": "FinanceTracker",
    "copyright": "Copyright © 2024 FinanceTracker Team",
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      "dist/**/*",
      "electron/**/*",
      "node_modules/**/*"
    ],
    "mac": {
      "category": "public.app-category.finance",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "icon": "electron/assets/icon.icns"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        }
      ],
      "icon": "electron/assets/icon.ico"
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "deb",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "electron/assets/icon.png",
      "category": "Office"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "FinanceTracker",
      "include": "electron/assets/uninstallOldVersion.nsh",
      "allowElevation": true,
      "runAfterFinish": true
    },
    "publish": {
      "provider": "github",
      "releaseType": "release"
    }
  },
  "dependencies": {
    "@radix-ui/react-dialog": "^1.1.14",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-select": "^2.2.5",
    "@radix-ui/react-slot": "^1.2.3",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "electron-updater": "^6.6.2",
    "firebase": "^10.7.1",
    "lucide-react": "^0.344.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "tailwind-merge": "^3.3.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.9.1",
    "@types/react": "^18.3.5",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.3.1",
    "autoprefixer": "^10.4.18",
    "concurrently": "^8.2.2",
    "electron": "^28.3.3",
    "electron-builder": "^24.13.3",
    "eslint": "^9.9.1",
    "eslint-plugin-react-hooks": "^5.1.0-rc.0",
    "eslint-plugin-react-refresh": "^0.4.11",
    "firebase-tools": "^13.0.2",
    "globals": "^15.9.0",
    "postcss": "^8.4.35",
    "rimraf": "^6.0.1",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.5.3",
    "typescript-eslint": "^8.3.0",
    "vite": "^5.4.2",
    "wait-on": "^7.2.0"
  }
}
